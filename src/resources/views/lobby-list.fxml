<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wolfcub.resources.controllers.LobbyListController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <ListView fx:id="lobbyListView" prefHeight="200" prefWidth="300" />

    <HBox spacing="10">
        <TextField fx:id="gameCodeField" promptText="Enter Game Code" />
        <Button text="Join" onAction="#joinButtonClicked" />
    </HBox>
</VBox>

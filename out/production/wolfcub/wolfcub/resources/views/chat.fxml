<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane fx:id="tabPane" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <tabs>
        <Tab text="General" closable="false">
            <content>
                <VBox fx:id="generalVBox" prefHeight="200.0" prefWidth="200.0" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
                    <TextArea fx:id="generalTextArea" editable="false" prefHeight="170.0" prefWidth="200.0" wrapText="true" />
                    <HBox spacing="10.0" padding="10.0">
                        <TextField fx:id="generalMessageTextField" prefWidth="200.0" />
                        <Button fx:id="generalSendButton" text="Send" />
                    </HBox>
                </VBox>
            </content>
        </Tab>
        <Tab text="Werewolf" closable="false">
            <content>
                <VBox fx:id="werewolfVBox" prefHeight="200.0" prefWidth="200.0" spacing="10.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
                    <TextArea fx:id="werewolfTextArea" editable="false" prefHeight="170.0" prefWidth="200.0" wrapText="true" />
                    <HBox spacing="10.0" padding="10.0">
                        <TextField fx:id="werewolfMessageTextField" prefWidth="200.0" />
                        <Button fx:id="werewolfSendButton" text="Send" />
                    </HBox>
                </VBox>
            </content>
        </Tab>
    </tabs>
</TabPane>
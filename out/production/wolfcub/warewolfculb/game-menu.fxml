<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.beans.binding.DoubleBinding?>
<?import javafx.beans.binding.NumberBinding?>
<VBox prefHeight="650.0" prefWidth="847.0" spacing="10" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="warewolfculb.GameMenuController" style="-fx-background-color: white;">
    <children>
        <BorderPane opacity="0.91" prefHeight="95.0" prefWidth="630.0" style="-fx-background-color: rgb(145, 220, 235);">
            <opaqueInsets>
                <Insets bottom="2.0" />
            </opaqueInsets>
            <center>
                <Label text="LOBBY" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Arial" size="40.0" />
                    </font>
                </Label>
            </center>
        </BorderPane>
        <AnchorPane prefHeight="532.0" prefWidth="847.0" style="-fx-background-color: transparent;">
            <children>
                <Button layoutX="320.0" layoutY="236.0" fx:id="joinGameButton" onAction="#joinGameButtonClicked" prefHeight="60.0" prefWidth="160.0" style="-fx-background-color: rgb(145, 220, 235); -fx-text-fill: black;" text="Join Game">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button layoutX="512.0" layoutY="236.0" onAction="#createGameButtonClicked" prefHeight="60.0" prefWidth="160.0" style="-fx-background-color: rgb(145, 220, 235); -fx-text-fill: black;" text="Create Game">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button layoutX="320.0" layoutY="308.0" fx:id="rulesButton" onAction="#rulesButtonClicked" prefHeight="60.0" prefWidth="160.0" style="-fx-background-color: rgb(145, 220, 235); -fx-text-fill: black;" text="Rules">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button layoutX="512.0" layoutY="308.0" onAction="#profileButtonClicked" prefHeight="60.0" prefWidth="160.0" style="-fx-background-color: rgb(145, 220, 235); -fx-text-fill: black;" text="Profile">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button layoutX="368.0" layoutY="380.0" onAction="#exitButtonClicked" prefHeight="60.0" prefWidth="160.0" style="-fx-background-color: rgb(145, 220, 235); -fx-text-fill: black;" text="Exit">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
        <HBox spacing="5" />
    </children>
</VBox>

